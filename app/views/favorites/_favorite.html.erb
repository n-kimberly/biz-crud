<% if favorite = current_user.favorite_for(post) %>
  <%= link_to [post, favorite],
    class: 'btn btn-primary',
    method: :delete do %>
    <i class = "glyphicon glyphicon-star"></i> Favorited
    <% end %>
<% else %>
  <%= link_to [post, Favorite.new],
    class: 'btn btn-primary',
    method: :post do %>
    <i class = "glyphicon glyphicon-star-empty"></i> Favorite
    <% end %>
<% end %>
