<h1> Topics
  <% if user_is_authorized_for_topics_creation_destroy? %>
    <%= link_to "Create New Topic", new_topic_path, class: 'btn btn-success' %>
  <% end %>
</h1>

<div class = "row">
  <div class = "col-md-8">
    <% @topics.each do |topic| %>
      <div class = "media">
        <div class = "media-body">
          <h4 class = "media-heading">
            <%= link_to topic.name, topic %>
          </h4>
          <small>
            <%= topic.description %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
</div>
