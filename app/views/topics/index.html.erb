<h1> Topics
    <% if user_is_authorized_for_topics_creation_destroy? %>
      <%= link_to "Create Topic", new_topic_path, class: 'btn btn-primary' %>
    <% end %>
</h1>
<% if current_user %>
  <div class = "row">
    <%= render @topics %>
  </div>
<% else %>
  <h4>
    You will need to sign in to view this page. <br />
  </h4>
<% end %>
