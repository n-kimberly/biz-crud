<h1><%= @topic.name %></h1>

<div class = "row">
  <div class = "col-md-8">
    <p class = "lead"> <%= @topic.description %></p>
    <% @topic.posts.each do |post| %>
    <div class = "media">
      <div class = "media-body">
        <h4 class = "media-head">
          <%= link_to post.title, topic_post_path(@topic, post) %>
        </h4>
        <small>
          submitted <%= time_ago_in_words(post.created_at) %> ago <br>
          <%= post.comments.count %> Comments
        </small>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= link_to "Edit Topic", edit_topic_path, class: 'btn' %>
<%= link_to "Delete", @topic, method: :delete, class: 'btn btn danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>

<%= link_to "Create New Post in #{@topic.name}", new_topic_post_path(@topic), class: 'btn' %>
