<div class = "row">
  <div class = "col-md-8">
    <h1><b>Topic: </b><%= @topic.name %></h1>
  </div>
  <div class = "col-md-4">
    <h3>
      <% if user_is_authorized_for_topics_update? %>
        <%= link_to "", edit_topic_path(@topic), class: 'glyphicon glyphicon-pencil' %>
      <% end %>
      <% if user_is_authorized_for_topics_creation_destroy? %>
          <%= link_to "", @topic, method: :delete, class: 'glyphicon glyphicon-trash', data: {confirm: 'Are you sure you want to delete this topic?'} %>
      <% end %>
    </h3>
  </div>
</div>

<div class = "row">
  <div class = "col-md-8">
    <p class = "lead"> <%= @topic.description %></p>
  </div>
</div><br />

<div class = "row">
  <% if current_user %>
    <%= link_to "Create Post", new_topic_post_path(@topic), class: 'btn btn-primary' %>
    <br />
  <% end %>
  <%= render @topic.posts %>
  <br />
</div>
