<h1><%= @topic.name %></h1>

<% if user_is_authorized_for_topics_update? %>
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-primary' %>
<% end %>

<% if user_is_authorized_for_topics_creation_destroy? %>
  <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>
<% end %>

<div class = "col-md-8">

  <p class = "lead"> <%= @topic.description %></p>

  <div class = "row">

    <h2>All Posts </h2>

    <% if current_user %>
      <%= link_to "Create New Post in #{@topic.name}", new_topic_post_path(@topic), class: 'btn btn-success' %>
    <% end %>

    <p class = "lead"> <%= @topic.description %></p>

    <%= render @topic.posts %>

  </div>

</div>
