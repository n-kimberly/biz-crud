<!DOCTYPE html>
<html>
  <head>
    <title>Biz CRUD</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag   'application', 'https://fonts.googleapis.com/css?family=Bangers|Lato|Marcellus+SC|Oswald|Roboto|Ultra|Zilla+Slab+Highlight', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class = "container" >
      <ul class = "nav nav-tabs" >

        <li class="pull-left">
          <%= link_to "Home", root_path %>
        </li>

        <li class="pull-left">
          <%= link_to "Biz Topics", topics_path %>
        </li>

        <% if current_user %>

        <li class="pull-right">
          <%= link_to "Sign Out", session_path(current_user), method: :delete %>
        </li>

        <li class="pull-right">
          <%= link_to current_user.name, user_path(current_user) %>
        </li>

        <li class="pull-right">
          <%= image_tag current_user.avatar_url(48), class: :gravatar %>
        </li>

        <% else %>

        <li class="pull-right">
          <%= link_to "Sign In", new_session_path %>
        </li>

        <li class="pull-right">
          <%= link_to "Sign Up", new_user_path %>
        </li>

        <% end %>

      </ul>

      <% if flash[:notice] %>
        <div class = "alert alert-success">
          <button type = "button"
                  class = "close"
                  data-dismiss = "alert">
                  &times;
          </button>
          <%= flash[:notice] %>
        </div>

      <% elsif flash[:alert] %>
        <div class = "alert alert-warning">
          <button type = "button"
                  class = "close"
                  data-dismiss = "alert">
                  &times;
          </button>
          <%= flash[:alert] %>
        </div>
      <% end %>

    <%= yield %>
  </body>
</html>
